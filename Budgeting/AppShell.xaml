<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Budgeting.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Budgeting.Views"
    Shell.FlyoutBehavior="Flyout">

    <!--Loading Page-->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:SplashLoadPage}"
        Route="SplashLoadPage" />
    
    <!--Login Page-->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
    
    <!--Main Page-->
    <TabBar>
        <Tab Title="Home" Icon="home_door_fill.svg">
            <ShellContent
                Icon="house_door_fill.svg"
                Title="Home"
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Settings" Icon="gear_fill.svg" />
    </TabBar>
    
    <!--Register Page-->
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage" />

</Shell>
