<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:models="clr-namespace:Org.OpenAPITools.Model"
               x:Class="Budgeting.Views.Popups.AddTransactionPopup">
    <VerticalStackLayout Spacing="8"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">
        <Label Text="Transaction name" />
        <Entry Placeholder="Name of the transaction"
               Text="{Binding TransactionCreate.Name}" />

        <Label Text="Description" />
        <Entry Placeholder="Description of the transaction"
               Text="{Binding TransactionCreate.Description}" />

        <Label Text="Amount" />
        <Entry Placeholder="Amount of the transaction"
               Text="{Binding TransactionCreate.Amount}"
               Keyboard="Numeric" />
        <Picker ItemsSource="{Binding CurrencyOptions}" />

        <Label Text="Time of the transaction" />
        <DatePicker Date="{Binding Date}" />
        <TimePicker Time="{Binding Time}" />

        <Button Text="Ok"
                Command="{Binding OkCommand}"
                CommandParameter="{Binding Source={RelativeSource Mode=FindAncestor, AncestorType={x:Type toolkit:Popup}}}" />
    </VerticalStackLayout>
</toolkit:Popup>
